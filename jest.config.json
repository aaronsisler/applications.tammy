{
    "collectCoverageFrom": [
        "src/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
        "src/app.js",
        "src/config.js",
        "src/components/__templates__/"
    ],
    "coverageReporters": [
        "html"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    },
    "setupFiles": [
        "raf/polyfill",
        "<rootDir>/test/setupTests.js"
    ],
    "setupTestFrameworkScriptFile": "jest-extended",
    "snapshotSerializers": [
        "enzyme-to-json/serializer"
    ],
    "testURL": "http://test.com/mockPath"
}
